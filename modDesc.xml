<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="42">
    <author>Wopster</author>
    <version>1.0.0.0</version>

    <title>
        <en>Guidance Steering</en>
        <de>Guidance Steering</de>
        <es>Dirección de Guiado</es>
    </title>

    <description>
        <en>
            <![CDATA[Guidance Steering.]]>
        </en>
        <de>
            <![CDATA[Guidance Steering.]]>
        </de>
        <es>
            <![CDATA[Dirección de Guiado.]]>
        </es>
    </description>

    <l10n filenamePrefix="translations/translation"/>

    <iconFilename>icon.png</iconFilename>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="src/loader.lua"/>
    </extraSourceFiles>

    <actions>
        <action name="GS_SHOW_UI" axisType="HALF"/>
        <action name="GS_SETPOINT" axisType="HALF"/>
        <action name="GS_SET_AUTO_WIDTH" axisType="HALF"/>
        <action name="GS_MINUS_WIDTH" axisType="HALF"/>
        <action name="GS_PLUS_WIDTH" axisType="HALF"/>
        <action name="GS_ENABLE_STEERING" axisType="HALF"/>
        <action name="GS_SHIFT_LEFT" axisType="HALF"/>
        <action name="GS_SHIFT_RIGHT" axisType="HALF"/>
    </actions>

    <inputBinding>
        <actionBinding action="GS_SHOW_UI">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_s"/>
        </actionBinding>
        <actionBinding action="GS_SETPOINT">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_e"/>
        </actionBinding>
        <actionBinding action="GS_SET_AUTO_WIDTH">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_r"/>
        </actionBinding>
        <actionBinding action="GS_MINUS_WIDTH">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_minus"/>
        </actionBinding>
        <actionBinding action="GS_PLUS_WIDTH">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_equals"/>
        </actionBinding>
        <actionBinding action="GS_ENABLE_STEERING">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_x"/>
        </actionBinding>
        <actionBinding action="GS_SHIFT_LEFT">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_pagedown"/>
        </actionBinding>
        <actionBinding action="GS_SHIFT_RIGHT">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_pageup"/>
        </actionBinding>
    </inputBinding>
</modDesc>
