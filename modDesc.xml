<modDesc descVersion="41">
    <author>Wopster</author>
    <version>1.0.0.0</version>

    <title>
        <en>Guidance Steering</en>
        <de>Guidance Steering</de>
    </title>

    <description>
        <en>
            <![CDATA[Guidance Steering.]]>
        </en>
        <de>
            <![CDATA[Guidance Steering.]]>
        </de>
    </description>

    <l10n>
        <text name="configuration_buyableGPS">
            <en>Global Positioning System</en>
        </text>
        <text name="configuration_buyableGPS_withoutGPS">
            <en>No</en>
        </text>
        <text name="configuration_buyableGPS_withGPS">
            <en>Yes</en>
        </text>
        <text name="input_GS_SHOW_UI">
            <en>Show UI</en>
        </text>
        <text name="input_GS_SET_AUTO_WIDTH">
            <en>Auto width</en>
            <de>Auto width</de>
        </text>
        <text name="input_GS_OFFSET_WIDTH_RESET">
            <en>Reset width</en>
            <de>Reset width</de>
        </text>
        <text name="input_GS_OFFSET_WIDTH_LEFT">
            <en>Offset width left</en>
            <de>Offset width left</de>
        </text>
        <text name="input_GS_OFFSET_WIDTH_RIGHT">
            <en>Offset width right</en>
            <de>Offset width right</de>
        </text>
        <text name="input_GS_ENABLE_STEERING">
            <en>Steering guidance</en>
            <de>Steering guidance</de>
        </text>
        <text name="input_GS_ACTIVATE">
            <en>Activate</en>
            <de>Activate</de>
        </text>
        <text name="input_GS_SETPOINT">
            <en>SETPOINT</en>
            <de>SETPOINT</de>
        </text>
        <text name="input_GS_TOGGLE_TERRAIN_ANGLE_SNAP">
            <en>Snap to terrain angle</en>
            <de>Snap to terrain angle</de>
        </text>
        <text name="input_GS_TURN_STEERING">
            <en>Set steering direction</en>
            <de>Set steering direction</de>
        </text>
    </l10n>

    <iconFilename>icon.png</iconFilename>
    <multiplayer supported="true"/>

    <extraSourceFiles>
        <sourceFile filename="src/loader.lua"/>
    </extraSourceFiles>

    <actions>
        <action name="GS_SHOW_UI" axisType="HALF"/>
        <action name="GS_SETPOINT" axisType="HALF"/>
        <action name="GS_SET_AUTO_WIDTH" axisType="HALF"/>
        <action name="GS_MINUS_WIDTH" axisType="HALF"/>
        <action name="GS_PLUS_WIDTH" axisType="HALF"/>
        <action name="GS_ENABLE_STEERING" axisType="HALF"/>
    </actions>

    <inputBinding>
        <actionBinding action="GS_SHOW_UI">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_KP_0"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_5 BUTTON_10"/>
        </actionBinding>
        <actionBinding action="GS_SETPOINT">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_s"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_5 BUTTON_10"/>
        </actionBinding>
        <actionBinding action="GS_SET_AUTO_WIDTH">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_x"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_5 BUTTON_10"/>
        </actionBinding>
        <actionBinding action="GS_MINUS_WIDTH">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_KP_minus"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_5 BUTTON_10"/>
        </actionBinding>
        <actionBinding action="GS_PLUS_WIDTH">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_KP_plus"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_5 BUTTON_10"/>
        </actionBinding>
        <actionBinding action="GS_ENABLE_STEERING">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lctrl KEY_KP_0"/>
            <binding device="GAMEPAD_DEFAULT" input="BUTTON_5 BUTTON_10"/>
        </actionBinding>
    </inputBinding>

